<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cityManagement.view.CityManagementActivity"
    android:background="#000000">


        <ImageView
            android:id="@+id/btn_back_cities"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginStart="10dp"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cabecera_cities"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cabecera_cities"/>

        <TextView
            android:id="@+id/tv_cabecera_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GestiÃ³n de ciudades"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back_cities"
            app:layout_constraintEnd_toStartOf="@+id/icon_cities"
            app:layout_constraintBottom_toTopOf="@+id/rv_cities"/>

        <ImageView
            android:id="@+id/icon_cities"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_cities"
            android:layout_marginEnd="10dp"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cabecera_cities"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cabecera_cities"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_city_row"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cabecera_cities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/empty_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="No hay ciudades almacenadas"
        android:textSize="26sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cabecera_cities"/>
</androidx.constraintlayout.widget.ConstraintLayout>