<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.view.WeatherFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <!-- id => fl_temp_actual -->
        <FrameLayout
            android:id="@+id/fl_temp_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_morphing_with_stroke"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_ciudad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/city_prueba"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_dateCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_prueba"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ciudad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/img_temp_actual"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/cloudy"
                    android:layout_marginVertical="10dp"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dateCurrent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_temp_actual"
                    app:layout_constraintBottom_toTopOf="@id/tv_description_temp_actual"/>

                <TextView
                    android:id="@+id/tv_temp_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_prueba"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    app:layout_constraintTop_toTopOf="@id/img_temp_actual"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_temp_actual"
                    app:layout_constraintBottom_toTopOf="@id/ll_diferencial_temp"/>

                <LinearLayout
                    android:id="@+id/ll_diferencial_temp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/img_temp_actual"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_temp_actual"
                    app:layout_constraintBottom_toBottomOf="@id/img_temp_actual">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/temp_min"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/temp_max"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/temp_min"/>
                            <TextView
                                android:id="@+id/tv_temp_min_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/temp_prueba"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal|center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/temp_max"/>
                            <TextView
                                android:id="@+id/tv_temp_max_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/temp_prueba"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_description_temp_actual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_prueba"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/img_temp_actual"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- id => fl_pronostico_horas -->
        <FrameLayout
            android:id="@+id/fl_pronostico_horas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/glass_morphing_with_stroke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_temp_actual">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pronostico_horas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_pronostico_horas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pronostico_horas"
                    android:textColor="@android:color/darker_gray"
                    android:paddingStart="5dp"
                    app:layout_constraintStart_toEndOf="@id/clock"
                    app:layout_constraintTop_toTopOf="@id/clock"
                    app:layout_constraintBottom_toBottomOf="@id/clock"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pronostico_horas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    tools:listitem="@layout/item_horas_row"
                    app:layout_constraintTop_toBottomOf="@id/clock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/pb_previsiones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No hay previsiones disponibles"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/clock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_pronostico_dias"/>

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/clock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_pronostico_dias"/>

                <Button
                    android:id="@+id/btn_pronostico_dias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glass_morphing_with_stroke"
                    android:text="@string/pronostico_dias"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="36dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_pronostico_horas"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <!-- id => fl_sol -->
        <FrameLayout
            android:id="@+id/fl_sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/glass_morphing_with_stroke"
            app:layout_constraintTop_toBottomOf="@id/fl_pronostico_horas"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/ll_amanecer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/salida_del_sol"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amanecer"
                        style="@style/TextNormal_bold"
                        android:paddingHorizontal="4dp"/>
                    <TextView
                        android:id="@+id/tv_hora_amanecer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hora_prueba"
                        style="@style/TextNormal_bold"
                        android:paddingEnd="4dp"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_amanecer"
                    app:layout_constraintBottom_toTopOf="@id/ll_anochecer"/>

                <LinearLayout
                    android:id="@+id/ll_anochecer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/ll_amanecer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/puesta_del_sol"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anochecer"
                        style="@style/TextNormal_bold"
                        android:paddingHorizontal="4dp"/>
                    <TextView
                        android:id="@+id/tv_hora_anochecer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hora_prueba"
                        style="@style/TextNormal_bold"
                        android:paddingEnd="4dp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <!-- id => fl_viento -->
        <FrameLayout
            android:id="@+id/fl_viento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_morphing_with_stroke"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/fl_sol"
            app:layout_constraintEnd_toEndOf="@id/fl_sol"
            app:layout_constraintTop_toBottomOf="@id/fl_sol">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/brujula"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img_brujula_w"
                    android:scaleType="centerCrop"
                    android:padding="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/brujula"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_vel_viento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/velocidad_prueba"
                        android:textAlignment="center"
                        style="@style/TextNormal_bold"
                        android:layout_marginBottom="5dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_dirc_viento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/direccion_prueba"
                        android:textAlignment="center"
                        style="@style/TextNormal_bold"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <!-- id =>  -->
        <FrameLayout
            android:id="@+id/fl_max_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_morphing_with_stroke"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fl_sol"
            app:layout_constraintTop_toBottomOf="@+id/fl_pronostico_horas"
            app:layout_constraintBottom_toBottomOf="@id/fl_viento">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sensacion_term"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feels_temp"
                        style="@style/TextNormal"/>

                    <TextView
                        android:id="@+id/tv_sensacion_termica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/temp_prueba"
                        android:textAlignment="textEnd"
                        style="@style/TextNormal_bold"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/atmosferico"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pressure"
                        style="@style/TextNormal"/>

                    <TextView
                        android:id="@+id/tv_presion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/pressure_prueba"
                        android:textAlignment="textEnd"
                        style="@style/TextNormal_bold"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/humedad"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/humidity"
                        style="@style/TextNormal"/>

                    <TextView
                        android:id="@+id/tv_humedad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/humedad_prueba"
                        android:textAlignment="textEnd"
                        style="@style/TextNormal_bold"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ultravioleta"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uvi"
                        style="@style/TextNormal"/>

                    <TextView
                        android:id="@+id/tv_uvi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/uvi_prueba"
                        android:textAlignment="textEnd"
                        style="@style/TextNormal_bold"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/visibilidad"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/visibility"
                        style="@style/TextNormal"/>

                    <TextView
                        android:id="@+id/tv_visibilidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        android:text="@string/visibility_prueba"
                        android:textAlignment="textEnd"
                        style="@style/TextNormal_bold"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- id =>  -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>